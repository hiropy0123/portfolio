<p id="notice"><%= notice %></p>

<h1>Works</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>詳細</th>
      <th>年</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.title %></td>
        <td><%= work.detail %></td>
        <td><%= work.year %></td>
        <td><%= link_to '詳細', work %></td>
        <td><%= link_to '編集', edit_work_path(work) %></td>
        <td><%= link_to '削除', work, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_work_path %>
